{
  "name": "smartlink-ca-api-and-sql-boilerplate",
  "private": true,
  "license": "UNLICENSED",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "yarn clean && swc ./src --out-dir build --strip-leading-paths",
    "clean": "rimraf ./build/",
    "dev": "yarn build && yarn start",
    "fix": "eslint --fix",
    "format": "prettier --write .",
    "lint:code": "eslint",
    "lint:style": "prettier --check .",
    "lint:types": "tsc --noEmit",
    "lint": "yarn format && yarn lint:types && yarn lint:style && yarn lint:code",
    "migration-create": "yarn build && npx typeorm migration:create ./src/db/migrations/migration",
    "migration-generate": "yarn build && npx typeorm migration:generate -d ./build/config/typeorm-config.js src/db/migrations/migration",
    "migration-revert": "yarn build && npx typeorm migration:revert -d ./build/config/typeorm-config.js",
    "migration-run": "yarn build && npx typeorm migration:run -d ./build/config/typeorm-config.js",
    "migration-show": "yarn build && npx typeorm migration:show -d ./build/config/typeorm-config.js",
    "start": "node build/index.js",
    "test:ci": "yarn build && jest --coverage",
    "test": "yarn build && jest"
  },
  "dependencies": {
    "@azure/identity": "^4.4.1",
    "@azure/keyvault-secrets": "^4.8.0",
    "@azure/storage-blob": "^12.26.0",
    "@fastify/helmet": "^13.0.0",
    "@fastify/rate-limit": "^10.2.1",
    "@fastify/schedule": "^5.0.2",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "fastify-schedule": "^1.1.0",
    "fastify-type-provider-zod": "^4.0.2",
    "mssql": "^11.0.1",
    "node-cron": "^3.0.3",
    "node-schedule": "^2.1.1",
    "object-hash": "^3.0.0",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.3",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.1",
    "@testcontainers/mssqlserver": "^10.16.0",
    "@types/dockerode": "^3.3.32",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@types/node": "22.10.2",
    "@types/node-cron": "^3.0.11",
    "@types/node-schedule": "^2.1.7",
    "@types/object-hash": "^3.0.6",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  }
}
